title= @title

css:
  body { font-size: 150%; }
  .sodatext { display: none; }
  .sodatext.current { display: block; }

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

javascript:
  var LEFT_ARROW = 37;
  var RIGHT_ARROW = 39;
  var currentIndex;

  $(function() {
    var $items = $(".sodatext");

    var min = 0;
    var max = $items.length;

    show(0);

    $(document).keydown(function(e) {
      if(e.keyCode == LEFT_ARROW) {
        show(currentIndex - 1);
      } else if(e.keyCode == RIGHT_ARROW) {
        show(currentIndex + 1);
      }
    });

    function show(index) {
      if (index < min) index = min;
      if (index > max) index = max;
      currentIndex = index;
      $items.hide();
      $items.eq(index).show();
    }
  });

body
  == @items.map(&:to_html).join
